---
to: 'package.json'
strategy: merge
---
<%
let developmentDependencies = getDependencies(
  [
    '@types/node',
    'del-cli',
    'esbuild',
    'eslint',
    'prettier',
    'prettier-plugin-packagejson',
    'typescript',
  ],
  workspace,
);
let packageJson = lodash.merge(
  {
    repository: {
      type: 'git',
      directory: project.relativePath,
    },
    type: 'commonjs',
    exports: {
      '.': './dist/main.js',
      './nextjs': './dist/presets/nextjs.js',
      './nodejs': './dist/presets/nodejs.js',
      './prettier': './dist/presets/prettier.js',
    },
    files: ['dist', 'src'],
    scripts: {
      build: `del-cli dist tsconfig.tsbuildinfo && ${BUILD_TO_CJS_COMMAND} && tsc`,
      clean: 'del-cli coverage dist *.tsbuildinfo',
      format: FORMAT_COMMAND,
      lint: 'eslint .',
      typecheck: 'tsc --project tsconfig.typecheck.json',
    },
    devDependencies: developmentDependencies,
    packageManager: 'npm@10.1.0',
    engines: {
      node: '^20.8.0',
    },
  },
  project.config.overrides?.packageJson ?? {},
);
-%>
<%- JSON.stringify(packageJson) %>
