---
to: 'package.json'
strategy: merge
---
<%
let packageJson = {
  repository: {
    type: 'git',
    directory: project.relativePath,
  },
  type: 'commonjs',
  exports: {
    '.': './dist/main.js',
    './nextjs': './dist/presets/nextjs.js',
    './nodejs': './dist/presets/nodejs.js',
    './prettier': './dist/presets/prettier.js',
  },
  files: ['dist', 'src'],
  scripts: {
    build: 'del-cli dist tsconfig.tsbuildinfo && swc src -d dist && tsc',
    clean: 'del-cli coverage dist *.tsbuildinfo',
    format: 'prettier . --write --ignore-unknown --ignore-path ../../.prettierignore',
    lint: 'eslint .',
    test: 'del-cli coverage && jest --passWithNoTests',
    typecheck: 'tsc --project tsconfig.typecheck.json',
  },
  packageManager: 'npm@10.1.0',
  engines: {
    node: '^20.8.0',
  },
};
-%>
<%- JSON.stringify(packageJson) %>
