{
  "name": "@jakubmazanec/template",
  "version": "1.1.0",
  "description": "TypeScript-first library for working with templates using EJS and Zod.",
  "repository": {
    "type": "git",
    "url": "git@github.com:jakubmazanec/js-tools.git",
    "directory": "packages/template"
  },
  "license": "LGPL-3.0-only",
  "author": "Jakub Mazanec <jakub@mazanec.dev>",
  "sideEffects": false,
  "type": "module",
  "exports": "./dist/main.js",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "del-cli dist tsconfig.tsbuildinfo && swc src -d dist && tsc",
    "clean": "del-cli coverage dist *.tsbuildinfo",
    "develop": "concurrently \"swc src -d dist --watch\" \"tsc --watch\"",
    "document": "del-cli docs && typedoc --options typedoc.config.cjs",
    "format": "prettier . --write --ignore-unknown",
    "lint": "eslint .",
    "test": "del-cli coverage && cross-env NODE_OPTIONS=--experimental-vm-modules jest --passWithNoTests",
    "typecheck": "tsc --project tsconfig.typecheck.json"
  },
  "dependencies": {
    "@jakubmazanec/error": "^2.0.0",
    "ejs": "^3.1.9",
    "fs-extra": "^11.1.1",
    "gray-matter": "^4.0.3",
    "lodash.merge": "^4.6.2",
    "lodash.omit": "^4.5.0",
    "prettier": "^3.0.0",
    "yaml": "^2.2.1",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.56",
    "@types/ejs": "^3.1.2",
    "@types/fs-extra": "^11.0.1",
    "@types/lodash.merge": "^4.6.7",
    "@types/lodash.omit": "^4.5.7",
    "@types/node": "^20.8.5",
    "chokidar": "^3.5.3",
    "concurrently": "^8.0.0",
    "cross-env": "^7.0.3",
    "del-cli": "^5.0.0",
    "eslint": "^8.36.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "prettier-plugin-packagejson": "^2.4.3",
    "ts-jest": "^29.1.0",
    "typedoc": "^0.25.2",
    "typedoc-plugin-markdown": "^3.15.1",
    "typescript": "^5.1.3"
  },
  "packageManager": "npm@10.1.0",
  "engines": {
    "node": "^20.8.0"
  }
}
