{
  "name": "@jakubmazanec/cli",
  "version": "0.2.0",
  "description": "TypeScript-first library for building CLIs.",
  "repository": {
    "type": "git",
    "url": "git@github.com:jakubmazanec/js-tools.git",
    "directory": "packages/cli"
  },
  "license": "LGPL-3.0-only",
  "author": "Jakub Mazanec <jakub@mazanec.dev>",
  "sideEffects": false,
  "type": "module",
  "exports": "./dist/main.js",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "del-cli dist tsconfig.tsbuildinfo && swc src -d dist && tsc",
    "clean": "del-cli coverage dist *.tsbuildinfo",
    "develop": "concurrently \"swc src -d dist --watch\" \"tsc --watch\"",
    "document": "del-cli docs && typedoc --options typedoc.config.cjs",
    "format": "prettier . --write --ignore-unknown",
    "lint": "eslint .",
    "test": "cross-env FORCE_COLOR=1 NODE_OPTIONS=--experimental-vm-modules jest --passWithNoTests",
    "typecheck": "tsc --project tsconfig.typecheck.json"
  },
  "dependencies": {
    "@jakubmazanec/args": "^1.0.0",
    "@jakubmazanec/error": "^2.0.0",
    "@jakubmazanec/ts-utils": "^2.1.0",
    "@jakubmazanec/zod-utils": "^1.0.0",
    "chalk": "^5.2.0",
    "fs-extra": "^10.0.1",
    "latest-version": "^7.0.0",
    "lodash": "^4.17.21",
    "react-error-boundary": "^4.0.7",
    "zod": "^3.14.4"
  },
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.56",
    "@types/fs-extra": "^9.0.13",
    "@types/lodash": "^4.14.195",
    "@types/node": "^20.8.5",
    "@types/react": "^18.0.26",
    "chokidar": "^3.5.3",
    "concurrently": "^8.0.0",
    "cross-env": "^7.0.3",
    "del-cli": "^5.0.0",
    "eslint": "^8.36.0",
    "ink": "^4.4.1",
    "ink-testing-library": "^3.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "prettier-plugin-packagejson": "^2.4.3",
    "react": "^18.2.0",
    "ts-jest": "^29.1.0",
    "typedoc": "^0.25.2",
    "typedoc-plugin-markdown": "^3.15.1",
    "typescript": "^5.1.3"
  },
  "peerDependencies": {
    "ink": "4.x",
    "react": "18.x"
  },
  "packageManager": "npm@10.1.0",
  "engines": {
    "node": "^20.8.0"
  }
}
