{
  "name": "@jakubmazanec/carson",
  "version": "0.2.0",
  "description": "Tool for managing workspace and project configuration.",
  "repository": {
    "type": "git",
    "url": "git@github.com:jakubmazanec/js-tools.git",
    "directory": "packages/carson"
  },
  "license": "AGPL-3.0-only",
  "author": "Jakub Mazanec <jakub@mazanec.dev>",
  "sideEffects": false,
  "type": "module",
  "exports": "./build/main.js",
  "bin": {
    "carson": "bin/carson.js"
  },
  "files": [
    "bin",
    "build",
    "source"
  ],
  "scripts": {
    "build": "del-cli build tsconfig.tsbuildinfo && esbuild \"source/**/*\" --platform=node --target=node20.8 --outdir=build --sourcemap && tsc",
    "clean": "del-cli coverage build *.tsbuildinfo",
    "develop": "concurrently \"esbuild \"source/**/*\" --platform=node --target=node20.8 --outdir=build --sourcemap --watch\" \"tsc --watch\"",
    "document": "del-cli docs && typedoc --options typedoc.config.cjs",
    "format": "prettier . --write --ignore-unknown",
    "lint": "eslint .",
    "start": "node --loader ts-node/esm/transpile-only --inspect src/run.ts",
    "test": "del-cli coverage && vitest run --coverage --passWithNoTests",
    "typecheck": "tsc --project tsconfig.typecheck.json"
  },
  "dependencies": {
    "@jakubmazanec/args": "^1.0.0",
    "@jakubmazanec/cli": "^0.2.0",
    "@jakubmazanec/error": "^2.0.0",
    "@jakubmazanec/fs-utils": "^0.1.0",
    "@jakubmazanec/template": "^1.0.0",
    "@jakubmazanec/ts-utils": "^2.1.0",
    "@jakubmazanec/zod-utils": "^1.0.0",
    "chalk": "^5.3.0",
    "fast-glob": "^3.3.2",
    "fflate": "^0.8.1",
    "fs-extra": "^10.1.0",
    "json5": "^2.2.3",
    "lodash": "^4.17.21",
    "micromatch": "^4.0.5",
    "prettier": "^3.2.5",
    "prettier-plugin-packagejson": "^2.4.3",
    "semver": "^7.5.4",
    "simple-git": "^3.22.0",
    "yaml": "^2.3.4",
    "zen-observable": "^0.10.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/lodash": "^4.14.202",
    "@types/micromatch": "^4.0.6",
    "@types/node": "^20.8.5",
    "@types/react": "^18.2.53",
    "@types/semver": "^7.5.6",
    "@types/zen-observable": "^0.8.7",
    "@vitest/coverage-v8": "^1.2.2",
    "concurrently": "^8.0.0",
    "del-cli": "^5.1.0",
    "esbuild": "^0.19.11",
    "eslint": "^8.56.0",
    "ink": "^4.4.1",
    "prettier": "^3.2.5",
    "prettier-plugin-packagejson": "^2.4.3",
    "react": "^18.2.0",
    "ts-node": "^10.9.2",
    "typedoc": "^0.25.7",
    "typedoc-plugin-markdown": "^3.17.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  },
  "peerDependencies": {
    "ink": "4.x",
    "react": "18.x"
  },
  "packageManager": "npm@10.1.0",
  "engines": {
    "node": "^20.8.0"
  }
}
